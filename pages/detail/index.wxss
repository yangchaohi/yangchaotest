page {
  width: 100%;
  height: 100%;
}

.page-body {
  width: 100%;
  height: 100%;
}

video {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  border: 0;
  display: block;
}

.inline{
  position: relative;
  display: inline;
  color: blue;
}

.viewTalkBox{
  color: red;
  white-space: normal;
  position: absolute;
  top: 0;
  right: 0px;
  width: 60%;
  line-height: 30px;
  font-size: 15px;
}

.viewTalkBoxItem{
  color: red;
  white-space: normal;
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 15px;
}


.videoBox{
  width: 100%;
}
.videoWaitBox{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0px;
  left: 0px;
}
.videoRightBar{
  width: 60px;
  position: absolute;
  right: 0px;
  bottom: 0px;
  height: 50%;
}

.videoStopButton{
  margin-left:18%;
  width: 90px;
  height: 50px;
  font-size: 25px;
  font-weight: 900;
  float: left;
  background-color:red;
  text-align: center;
  line-height: 50px;
  color: #fff;
  border-radius:10px !important;
}

.videoInvite{
  position: absolute;
  width: 100px;
  height: 30px;
  right: 5%;
  top:5%;
  background-color:rgb(27, 96, 223);
  text-align: center;
  line-height: 30px;
  color: #fff;
  font-size: 15px;
  border-radius:10px !important;

}
.videoStart{
  position: absolute;
 
  left: 50%;
  margin-left:-45px;
  background-color:red;
  top:50%;
  margin-top:-25px;  
  text-align: center;
  line-height: 50px;
  color: #fff;
  width: 90px;
  height: 50px;
  font-size: 25px;
  font-weight: 900;
  border-radius:10px !important;

}

.videoPause{
  position: absolute;
  width: 60px;
  height: 30px;
  right: 5%;
  background-color:red;
  top:5%; 
  text-align: center;
  line-height: 30px;
  color: #fff;
  font-size: 15px;
  border-radius:1px !important;

}

.videoWaitBack{
  left:0px;
  top:0px;
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity:0.5;
  border-radius:1px !important;
}

.videoWait{
  position: absolute;
  width: 200px;
  left: 50%;
  margin-left:-110px; 
  top:50%;
  margin-top:-50px; 
  text-align: center;
  height: 140px;
  background-color: rgb(16, 56, 167);
  opacity:1;
  margin: 0xp 20px 0px 20px;
}

.videoWaitCannel{
  width: 100%;
  height: 40px;
  line-height: 50px;
}
.videoWaitButton{
  margin:0 auto;
  width: 60px;
  height: 30px;
  background-color:red;
  text-align: center;
  line-height: 30px;
  color: #fff;
  font-size: 12px;
  border-radius:10px !important;
}

.videoWaitUser{
  position: relative;
  width: 50%;
  height: 100px;
  float: left;
}
.videoWaitIcon{
  margin:auto; 
  margin-top:25px;
  width: 50px;
  height: 50px;
}
.videoWaitReady{
  position: absolute;
  left:50px;
  top: 50px;
  width: 25px;
  height: 25px;
  background-color: #ccc;
}
.videoWaitName{
  width: 100%;
  height: 25px;
  line-height:25px;
  text-align: center;
  color: #fff;
  font-size:12px;
}
.videoEndView{
  position: absolute;
  top:25%;
  left:0px;
  width: 100%;
  text-align: center;
  height: 100%;
  background-color: #000;
  opacity:1;
}
.videoStopView{
  position: absolute;
  top:0px;
  left:0px;
  width: 100%;
  text-align: center;
  height: 100%;
  background-color: #000;
  opacity:0.5;
  border-radius:6rpx !important;
}

.videoStopText{
  width: 100%;
  height: 40px;
  font-size:18px;
  line-height: 40px;
  border-top:3px solid #fff;
  border-bottom:3px solid #fff;
  color: #fff;
}
.videoStopTop{
  height: 20%;
  width: 100%;
}

.videoStopButtonView{
  top:50%;
  position: absolute;
  width: 100%;
  height: 50px;
  line-height: 200px;
}
.viewPointBox{
  position: absolute;
  top:0px;
  left: 0px;
  padding: 10px;
  width:fit-content;
  width:-webkit-fit-content;
  width:-moz-fit-content;
  font-size: 35px;
  font-weight: 900;
  background: linear-gradient(to right,#000, #c0c0c0);
  opacity: 0.5;
  border-radius:0px !important;
}
.videoPoint{
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 20px;
  font-weight: 900;
  color:#fff;
}
.videoIcon{
  margin-top: 20px;
  margin-left:10px; 
  width: 40px;
  height: 35px;
  border-radius:10px !important;
  float: left;
}


.viewboxTest{
  width: 80px;
  height: 50px;
  line-height:40px;
  border:2px solid #fff;
  border-radius:5px !important;
  background-size:cover;
  background-position:center;
  flex: 1;
  position: absolute;
  background-color: red;
  opacity:1;
  left: 20%;
  top:20%;
}

.videoNumber{
  padding-top:8px; 
  width: 100%;
  color: #fff;
  font-size:12px; 
  text-align: center;
}
.videoDesc{
  width: 100%;
  position: absolute;
  bottom: 0px;
  left:0px;
  height:100px;
  opacity:1;
  background-color:#000;
}
.videoTitle{
  width: 100%;
  height:50px;
  line-height: 50px;
  color:#fff; 
  margin-left:20px;
}

.videoHeader{
  margin-left:20px; 
  width: 30px;
  height: 30px;
  border-radius:10px !important;
  float: left;
}


.videoName{
  float: left;
  margin-left:10px; 
  width: 80px;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  color: #fff;
}

.controls {
  position: relative;
  top: 0%;
  height: 100%;
  display: flex;
}
.play{
  width: 40px;
  height: 40px;
  flex: 1;
  position: absolute;
  background-color: red;
  top:50%;
}

.viewLeftButton{
  border: 2px solid #fff;
  width: 40px;
  height: 60px;
  left: 0;
  top: 50%;
  margin-top:-32px;
  flex: 1;
  position: absolute;
  opacity:0.5;
  background-color: #c0c0c0;
  border-radius:6rpx !important;
}
.viewRightButton{
  border: 2px solid #fff;
  width: 40px;
  height: 60px;
  right: 0;
  top: 50%;
  margin-top:-32px;
  flex: 1;
  position: absolute;
  opacity:0.5;
  background-color: #c0c0c0;
  border-radius:6rpx !important;
}

.viewTopButton{
  border: 2px solid #fff;
  width: 60px;
  height: 40px;
  right: 50%;
  top: 0;
  margin-right:-32px;
  position: absolute;
  background-color: #c0c0c0;
  border-radius:6rpx !important;
  opacity:0.5;
}

.viewBottomButton{
  border: 2px solid #fff;
  width: 60px;
  height: 40px;
  right: 50%;
