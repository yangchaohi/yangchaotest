}

.viewNotice{
  width: 50px;
  height: 24px;
  margin-left:-25px;
  margin-top:-12px;
  line-height:25px;
  border-radius:8px !important;
  color:#fff;
  padding:4px;
  flex: 1;
  position: absolute;
  text-align:center;
  background-color: #6739b6 !important;
  opacity:0.9;
  left: 50%;
