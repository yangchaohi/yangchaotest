/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.viewTalkToggle{
  width: 50px;
  height: 50px;
  position: absolute;
  right: 5%;
  top: 1%;
}

.viewTalkPreView{
  left:20%;
  width: 70%;
  top:10%;
  position: absolute;
  background-color: #000;
  opacity: 0.8;
  padding: 5px;
  border: 3px solid rgb(250, 146, 9);
  border-radius:10px !important;
}

.viewTalkToggleImg{
  width: 30px;
  height: 30px;
}
.viewTalkBox{
  position: absolute;
  left: 20%;
  top:20%;
  width: 60%;
  height: 60%;
  border: 2px solid #000;
  padding:5px;
  opacity: 0.8;
  border-radius:7px !important;
  background-color: rgb(250, 146, 9);
}
.viewTalkList{
  width: 100%;
  height: 90%;
  top:10%;
  background-color: #000;
}
.inline{
  display: inline;
}
.viewTalkItem{
  width: 100%;
  line-height: 15px;
  font-size: 15px;
  white-space: normal;
  margin: 2px;
  color: #fff;
}
.viewTalkOwner{
  color:rgb(154, 245, 49);
}

.viewTalkInput{
  border: 1px solid #000;
  float: left;
  width: 70%;
  height: 30px;
  border-radius: 5px;
  background-color: #fff;
  color:#000;
  font-size:16px;
  line-height: 30px;
}
.viewTalkButton{
  float: left;
  border: 1px solid #000;
  width: 20%;
  margin-left: 2px;
  text-align: center;
  font-size:16px;
  height: 30px;
  line-height:30px;
  border-radius: 5px;
}
.viewTalkClose{
  height: 30px;
  line-height:30px;
  float: right;
  width:5%;
  margin-right: 1%;
}
.viewTalkClose::before {
    content: "\2716";
}
.viewTalkSend{
  width: 100%;
  height: 10%;
  color: #fff;
}