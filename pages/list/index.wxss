pages {
  position: relative;
  z-index: 9999998;
  background: #fff;
}
.img_item {
  width: 50%;
  display: inline-block;
  vertical-align: top;
}

.viewBox{
  position: relative;
  margin-bottom: 5px;
  padding: 3px;
  border:2px solid #eee;
  border-radius: 5px;
}

.viewTitle{
  font-size: 13px;
  margin: 3px;
}

.viewInfo{
   width: 100%;
}


.viewTime{
    position: absolute;
    right: 10px;
    height: 19px;
    line-height: 15px;
    border-radius:2px;
    font-size: 15px;
    background-color: #fff;
    padding: 2px;
}

.viewUser{
  color:#666;
  width: 60%;
  height: 20px;
  font-size: 13px;
}

.viewLike{
  color:red;
  vertical-align: middle;
  position: absolute;
  bottom:0px;
  z-index: 100;
  right: 5px;
  height: 20px;
  line-height: 20px;
  font-size: 13px;
}


.viewLike::before {
    content: "\2665";
}
.viewLikeIcon{
  vertical-align: middle;
  width: 13px;
  height: 13px; 
}
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}

.weui-navbar {
display:flex;
position: relative;
width:100%;
height: 50px;
border-bottom:1rpx solid #ccc;

}

.weui-navbar__item {
position:relative;
display:block;
-webkit-box-flex:1;
-webkit-flex:1;
flex:1;
padding:13px 0;
text-align:center;
font-size:0;

}

.weui-navbar__item.weui-bar__item_on {
color:#1aad19;

}
.weui-navbar__slider {
position:absolute;
content:" ";
left:0;
bottom:0;
width:6em;
height:3px;
background-color:#1aad19;
-webkit-transition:-webkit-transform .3s;
transition:-webkit-transform .3s;
transition:transform .3s;
transition:transform .3s,-webkit-transform .3s;

}

.weui-navbar__title {
display:inline-block;
font-size:15px;
max-width:8em;
width:auto;
overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
word-wrap:normal;

}
